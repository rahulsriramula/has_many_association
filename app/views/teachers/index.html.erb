<h1>Event Listing</h1>
<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
table#t01 {
    width: 100%;    
    background-color: #f1f1c1;
}
</style>
<table style="width: 100%">
	<thead>
    <tr>
      <th>Name</th>
      <th>Salary</th>
      <th>School</th>
      <th>Actions</th>
    </tr>
	</thead>
	<tbody>
		<% @teachers.each do |teacher| %>
		  <tr>
		  	<td><%= teacher.name %></td>
        <td><%= teacher.salary %></td>
        <td><%= teacher.school %></td>
        <td><%= link_to 'Students', teacher_students_path(teacher) %></td>
        <td><%= link_to 'Show', teacher_path(teacher) %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher_path(teacher),
                          method: :delete, data: { clear: 'Are you sure?' }  %></td>
		  </tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'New teacher', new_teacher_path %>